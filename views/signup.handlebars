<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card main-card p-3">
        <h2>Sign Up</h2>

        <form class="form" id="signup-form">
          <div class="form-group">
            <h5 for="signup-user" class="mt-2">Username</h5>
            <input type="text" class="form-control" id="signup-user" placeholder="Enter username">
          </div>
          <div class="form-group">
            <h5 for="signup-email" class="mt-2">Email</h5>
            <input type="email" class="form-control" id="signup-email" aria-describedby="emailHelp"
              placeholder="Enter email">
          </div>
          <div class="form-group">
            <h5 for="signup-password" class="mt-2">Password</h5>
            <input type="password" class="form-control" id="signup-password" placeholder="Password">
          </div>
          <button type="submit" class="btn nav-btn mx-0 mt-3">
            <a class="nav-link text-dark" href="#"><span class="btn-text">Sign Up</span></a>
          </button>
          <br>
          <a href="/login" class="link-text"><span>Already have an account? Log in instead</span></a>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/js/signup.js"></script>